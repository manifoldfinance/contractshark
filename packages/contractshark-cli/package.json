{
  "name": "@contractshark/cli",
  "version": "0.17.1",
  "description": "Command-line tool for ContractShark framework.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "contract-shark": "./bin/contract-shark"
  },
  "scripts": {
    "build": "npx tsc",
    "test": "npx nyc npx ava --verbose"
  },
  "contract-shark": {
    "compiler": {
      "build": "./build",
      "match": [
        "./src/**/*.sol"
      ],
      "severities": [
        "error",
        "warning"
      ]
    },
    "flattener": {
      "build": "./build",
      "match": [
        "./src/**/*.sol"
      ],
      "severities": [
        "error",
        "warning"
      ]
    },
    "sandbox": {
      "port": 8545
    },
    "test": {
      "server": true,
      "port": 8545,
      "match": [
        "./src/**/*.hay.*"
      ],
      "blockTime": null
    },
    "require": [
      "ts-node/register"
    ]
  },
  "ava": {
    "concurrency": 1,
    "files": [
      "dist/tests/*.test.js",
      "dist/tests/**/*.test.js"
    ]
  },
  "nyc": {
    "exclude": [
      "src/tests"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@types/inquirer": "7.3.1",
    "@types/node": "15.3.0",
    "@types/yargs": "16.0.1",
    "ava": "3.15.0",
    "nyc": "15.0.1",
    "solc": "0.8.4",
    "ts-node": "8.10.1",
    "typescript": "4.2.4",
    "web3": "1.3.6"
  },
  "dependencies": {
    "@contractshark/reporter": "0.10.0",
    "@contractshark/compiler": "0.17.1",
    "@contractshark/flattener": "0.17.1",
    "@contractshark/init": "0.17.1",
    "@contractshark/sandbox": "0.17.1",
    "@contractshark/spec": "0.17.1",
    "inquirer": "8.0.0",
    "yargs": "17.0.1"
  },
  "peerDependencies": {
    "solc": "*",
    "web3": "*"
  }
}
